<%@ Master Language="C#" AutoEventWireup="true" CodeBehind="Guest.master.cs" Inherits="KpopZtation.View.Master.Guest" %>

<!DOCTYPE html>

<html>
<head runat="server">
    <title></title>
    <asp:ContentPlaceHolder ID="head" runat="server"></asp:ContentPlaceHolder>
    <link rel="stylesheet" href="../StyleCSS/guestNavBarStyle.css" />
</head>
<body>
    <form id="form1" runat="server">
        <div class="container">
            <div class="navbar">
                <div class="navbar-left">
                    <asp:Label ID="kpopZtation" runat="server" Text="KpopZtation" CssClass="navbar-logo"></asp:Label>
                    <div class="navbar-menu">
                        <asp:Menu ID="Menu1" runat="server" Font-Bold="True" Font-Names="Arial" ForeColor="White" Orientation="Horizontal">
                            <Items>
                                <asp:MenuItem Text="Home" Value="Home" NavigateUrl="~/View/home.aspx"></asp:MenuItem>
                            </Items>
                            <StaticHoverStyle ForeColor="Yellow" />
                        </asp:Menu>
                    </div>
                </div>
                <div class="navbar-right">
                    <asp:Menu ID="Menu2" runat="server" Font-Bold="True" Font-Names="Arial" ForeColor="White" Orientation="Horizontal">
                        <Items>
                            <asp:MenuItem Text="Login" Value="Login" NavigateUrl="~/View/Authentication/Login.aspx"></asp:MenuItem>
                            <asp:MenuItem Text="Register" Value="Register" NavigateUrl="~/View/Authentication/Register.aspx"></asp:MenuItem>
                        </Items>
                        <StaticHoverStyle ForeColor="Yellow" />
                        <staticmenuitemstyle BorderWidth="10px" BorderColor="Transparent"/>
                    </asp:Menu>
                </div>
            </div>

            <div class="content">
                <asp:ContentPlaceHolder ID="ContentPlaceHolder1" runat="server">
                </asp:ContentPlaceHolder>
            </div>

            <div class="footer">
                &copy; 2023 - KpopZtation
            </div>
        </div>
    </form>
</body>
</html>
